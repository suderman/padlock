#------------------------------------------------------------------------------
# Configuration
#------------------------------------------------------------------------------
port 1194
proto udp
keepalive 10 60
ping-timer-rem
persist-key
persist-tun
ifconfig-pool-persist ipp.txt
key-direction 0

;push "redirect-gateway"
;push "dhcp-option DNS 8.8.8.8"
;push "dhcp-option DNS 8.8.4.4"
;comp-lzo
;push "comp-lzo"
;verb 3
;mute 20
;status openvpn.log

#------------------------------------------------------------------------------
# Connections
#------------------------------------------------------------------------------
;dev tap0
;server-bridge 10.8.0.4 255.255.255.0 10.8.0.50 10.8.0.100

;dev tun
;topology subnet
;server 10.8.0.0 255.255.255.0

