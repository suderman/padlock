#------------------------------------------------------------------------------
# Configuration
#------------------------------------------------------------------------------
remote-cert-tls client
ns-cert-type client
key-direction 0
ping-timer-rem
keepalive 10 60
persist-tun
persist-key
persist-local-ip
persist-remote-ip
ifconfig-pool-persist tun.ipp
push "persist-key"
push "persist-tun"
push "redirect-gateway def1"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 8.8.4.4"

#------------------------------------------------------------------------------
# Connection
#------------------------------------------------------------------------------
dev tun0
proto tcp-server
port 443
topology subnet

#------------------------------------------------------------------------------
# Customize
#------------------------------------------------------------------------------
;server 192.168.200.0 255.255.255.0
;up "/route-tun0-device.sh"
;down "/unroute-tun0-device.sh"
;script-security 2

